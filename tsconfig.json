{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
//    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "src/*.tsx",
    "src/*.jsx",
    "src/components/*.tsx",
    "src/services/*.ts",
    "src/api/*.ts"
  ],
  "exclude": ["node_modules"],
  "baseUrl": "."
}
